    <script>
      // JavaScript to open the dropdown on hover
      $(document).on("mouseenter", "#hover-dropdown", function() {
        var dropdownMenu = $(this).find(".dropdown-menu");
        dropdownMenu.show();
      });
    
      // JavaScript to close the dropdown when the mouse leaves
      $(document).on("mouseleave", "#hover-dropdown", function() {
        var dropdownMenu = $(this).find(".dropdown-menu");
        dropdownMenu.hide();
      });

      document.getElementById("contactForm").addEventListener("submit", function (event) {
        event.preventDefault();
        // Add your form submission logic here (e.g., send the form data to the server).

        // Show the "Submitting" message before actual form submission.
        var submittingMessage = document.querySelector(".submitting");
        submittingMessage.style.display = "block";

        // Set a timeout to simulate a delay before showing the success message.
        setTimeout(function () {
          // Hide the "Submitting" message.
          submittingMessage.style.display = "none";
          
          // Show the success message and hide the form.
          var formMessageSuccess = document.getElementById("form-message-success");
          formMessageSuccess.style.display = "block";
          document.getElementById("contactForm").style.display = "none";
        }, 2000); // Change the delay time (in milliseconds) as needed.
      });

      $(document).ready(function(){
        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
              $('#back-to-top').fadeIn();
            } else {
              $('#back-to-top').fadeOut();
            }
          });
          // scroll body to 0px on click
          $('#back-to-top').click(function () {
            $('body,html').animate({
              scrollTop: 0
            }, 400);
            return false;
          });
      });
