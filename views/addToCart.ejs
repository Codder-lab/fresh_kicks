                          <img src="/person-circle.svg" width="40" height="40" class="rounded-circle">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                          <% if (fullName) { %>
                            <p>Hello, <%= fullName %>!</p>
                          <% } %>
