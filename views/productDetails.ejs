    </footer>
  </div>

  <a id="back-to-top" href="#" class="btn btn-lg back-to-top" role="button">
    <img src="/arrow-up.svg" alt="scroll to top arrow" width="35px" height="35px">
  </a>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script>
        // JavaScript to open the dropdown on hover
        $(document).on("mouseenter", "#hover-default", function() {
          var dropdownMenu = $(this).find(".dropdown-menu");
          dropdownMenu.show();
        });
      
        // JavaScript to close the dropdown when the mouse leaves
        $(document).on("mouseleave", "#hover-default", function() {
          var dropdownMenu = $(this).find(".dropdown-menu");
          dropdownMenu.hide();
        });

        $(document).ready(function(){
        $(window).scroll(function () {
            if ($(this).scrollTop() > 50) {
              $('#back-to-top').fadeIn();
            } else {
              $('#back-to-top').fadeOut();
            }
          });
          // scroll body to 0px on click
          $('#back-to-top').click(function () {
            $('body,html').animate({
              scrollTop: 0
            }, 400);
            return false;
          });
      });
    </script>
</body>
